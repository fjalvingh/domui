{
  "compilerOptions": {
    "module": "system",
//    "module": "system",

    //    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outFile": "domui-combined.js",

    // https://github.com/angular/angular/issues/14595: fixes cannot find Iterable
    "lib" : ["es2015", "es2015.iterable", "es2017", "dom"
      // Fixes cannot find ActiveXObject" https://github.com/dojo/typings/issues/124
    , "scripthost"
    ]
  },

  // Welcome back to 1880: manually specify input file order for namespace consisting of multiple files. Fun.
  // we cannot yet use modules because that means splitting the WebUI namespace- which is big.
  "files": [
    "domui.ajax.ts"
    , "domui.browser.ts"
    , "domui.bulkupload.ts"
    , "domui.busy.ts"
    , "domui.comp.ts"
    , "domui.computil.ts"
    , "domui.crud.ts"
    , "domui.dateinput.ts"
    , "domui.dragdrop.ts"
    , "domui.fileupload.ts"
    , "domui.handlers.ts"
    , "domui.jquery.ts"
    , "domui.lookuptyping.ts"
    , "domui.print.ts"
    , "domui.resizing.ts"
    , "domui.scrolltabpanel.ts"
    , "domui.webui.ts"
    , "domui.webui.util.ts"
    , "domui.packets.ts"
    , "domui.auth.ts"
    , "domui.main.ts"
    ]
}

/*
 * To prepare for the Typescript modules to use do the following:
 * apt install npm
 * npm install typescript@2.0
 * npm install --save @types/jquery --save
 * npm install --save @types/jquery.ui
 */
